<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
	<f:Form editable="true" id="investmentForm" width="100%">
		<f:layout>
			<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
				emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="{i18n>tableA}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<t:Table selectionMode="None" rows="{/tableA}" visibleRowCount="5">
								<t:columns>
									<t:Column sortProperty="tipologia" filterProperty="tipologia">
										<t:multiLabels>
											<Label text="Tipologia degli investimenti e luogo" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{tipologia}"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="inizio" filterProperty="inizio" headerSpan="2,1">
										<t:multiLabels>
											<Label text="Inizio - Fine" textAlign="Center" width="100%"/>
											<Label text="Dal" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{inizio}"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="fine" filterProperty="fine">
										<t:multiLabels>
											<Label text="Inizio - Fine" textAlign="Center" width="100%"/>
											<Label text="Fine" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{fine}"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="importoEuro" filterProperty="importoEuro">
										<t:multiLabels>
											<Label text="Imponibile Euro" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{importoEuro}" type="Number"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</f:fields>
					</f:FormElement>
					<!--f:FormElement label="{i18n>totalA}">
						<f:fields>
							<Text text="{/totalA}"/>
						</f:fields>
					</f:FormElement-->
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>tableB}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<t:Table selectionMode="None" rows="{/tableB}" visibleRowCount="9">
								<t:columns>
									<t:Column sortProperty="tipologia" filterProperty="tipologia">
										<t:multiLabels>
											<Label text="Tipologia degli investimenti" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Text text="{tipologia}"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="luogo" filterProperty="luogo">
										<t:multiLabels>
											<Label text="Luogo" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{luogo}"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="inizio" filterProperty="inizio" headerSpan="2,1">
										<t:multiLabels>
											<Label text="Inizio - Fine" textAlign="Center" width="100%"/>
											<Label text="Dal" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{inizio}"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="fine" filterProperty="fine">
										<t:multiLabels>
											<Label text="Inizio - Fine" textAlign="Center" width="100%"/>
											<Label text="Fine" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{fine}"/>
										</t:template>
									</t:Column>
									<t:Column sortProperty="importoEuro" filterProperty="importoEuro">
										<t:multiLabels>
											<Label text="Imponibile Euro" textAlign="Center" width="100%"/>
										</t:multiLabels>
										<t:template>
											<Input value="{importoEuro}" type="Number"/>
										</t:template>
									</t:Column>
								</t:columns>
							</t:Table>
						</f:fields>
					</f:FormElement>
					<!--f:FormElement label="{i18n>totalB}">
						<f:fields>
							<Text text="{/totalB}"/>
						</f:fields>
					</f:FormElement-->
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>tableC}">
				<f:formElements>
					<f:FormElement label="{i18n>tableC_1}">
						<f:fields>
							<TextArea id="tableC_1" value="{/tableC_1}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label=" {i18n>tableC_2}">
						<f:fields>
							<TextArea id="tableC_2" value="{/tableC_2}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>tableC_3}">
						<f:fields>
							<TextArea id="tableC_3" value="{/tableC_3}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>tableC_4}">
						<f:fields>
							<TextArea id="tableC_4" value="{/tableC_4}" growing="true" width="100%"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer>
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<FormattedText htmlText="{i18n>invText}" width="100%"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>claim}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<VBox>
								<FormattedText htmlText="{i18n>claimText3}" width="100%"/>
								<RadioButtonGroup class="sapUiMediumMarginBottom" id="grp" columns="2">
									<buttons>
										<RadioButton text="{i18n>yes}" selected="{/claimYes}" groupName="gr"/>
										<RadioButton text="{i18n>no}" selected="{/claimNo}" groupName="gr"/>
									</buttons>
								</RadioButtonGroup>
							</VBox>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>claimAlso}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<FormattedText htmlText="{i18n>claimAlsoText}" width="100%"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>privacy}">
				<f:formElements>
					<f:FormElement>
						<f:fields>
							<FormattedText htmlText="{i18n>privacyText}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>date}">
						<f:fields>
							<Input width="50%" id="luogo" value="{/luogo}"/>
							<Input width="50%" id="data" value="{/data}"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>signature}">
						<f:fields>
							<Input width="50%" id="signature" value="{/signature}"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>