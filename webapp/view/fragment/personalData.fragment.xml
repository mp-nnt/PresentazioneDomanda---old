<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<f:Form editable="true" id="personalDataForm" width="100%" class="personal-data-form">
		<f:layout>
			<f:ResponsiveGridLayout labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false" emptySpanXL="0" emptySpanL="4"
				emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
		</f:layout>
		<f:formContainers>
			<f:FormContainer title="{i18n>stamp_duty}">
				<f:formElements>
					<f:FormElement label="{i18n>stamp_duty_id}" id="stamp_duty_id_lbl">
						<f:fields>
							<MaskInput width="50%" id="stamp_duty_id_inp" value="{/stamp_duty_id}" mask="9999999999" placeholder="{i18n>stamp_duty_claim}"
								class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>stamp_duty_date}" id="stamp_duty_date_lbl">
						<f:fields>
							<DatePicker id="PlDate" width="50%"
								value="{path: '/stamp_duty_date', type : 'sap.ui.model.odata.type.DateTime', constraints : {displayFormat : 'Date'}}"
								placeholder="{i18n>ph_stamp_duty_date}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
			<f:FormContainer title="{i18n>requester}" id="requester">
				<f:formElements>
					<f:FormElement label="{i18n>surname}" id="surname_lbl">
						<f:fields>
							<Input width="50%" id="surname_inp" value="{/surname}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>name}" id="name_lbl">
						<f:fields>
							<Input width="50%" id="name_inp" value="{/name}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>owner}" id="owner_lbl">
						<f:fields>
							<Input width="50%" id="owner_inp" value="{/owner}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>piva}" id="piva_lbl">
						<f:fields>
							<Input width="50%" id="piva_inp" value="{/piva}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>fiscalCode}" id="fiscalCode_lbl">
						<f:fields>
							<Input width="50%" id="fiscalCode_inp" value="{/fiscalCode}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>sector}" id="sector_lbl">
						<f:fields>
							<RadioButtonGroup id="sector_grp">
								<buttons>
									<RadioButton text="{i18n>craft}" selected="{/craft}" groupName="gr_sector"/>
									<RadioButton text="{i18n>industry}" selected="{/industry}" groupName="gr_sector"/>
									<RadioButton text="{i18n>trade}" selected="{/trade}" groupName="gr_sector"/>
									<RadioButton text="{i18n>services}" selected="{/services}" groupName="gr_sector"/>
									<RadioButton text="{i18n>freelance}" selected="{/freelance}" groupName="gr_sector"/>
								</buttons>
							</RadioButtonGroup>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>state}" id="state_lbl">
						<f:fields>
							<Input width="50%" id="state_inp" value="{/state}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>region}" id="region_lbl">
						<f:fields>
							<Input width="50%" id="region_inp" value="{/region}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>postCode}" id="postCode_lbl">
						<f:fields>
							<Input width="50%" id="postCode_inp" value="{/postCode}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>city}" id="city_lbl">
						<f:fields>
							<Input width="50%" id="city_inp" value="{/city}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>district}" id="district_lbl">
						<f:fields>
							<Input width="50%" id="district_inp" value="{/district}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>street}" id="street_lbl">
						<f:fields>
							<Input width="50%" id="street_inp" value="{/street}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>streetNumber}" id="streetNumber_lbl">
						<f:fields>
							<Input width="50%" id="streetNumber_inp" value="{/streetNumber}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>telephone}" id="telephone_lbl">
						<f:fields>
							<Input width="50%" id="telephone_inp" value="{/telephone}" type="Tel" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>mail}" id="mail_lbl">
						<f:fields>
							<Input width="50%" id="mail_inp" value="{/mail}" type="Email" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>pec}" id="pec_lbl">
						<f:fields>
							<Input width="50%" id="pec_inp" value="{/pec}" type="Email" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>iban}" id="iban_lbl">
						<f:fields>
							<Input width="50%" id="iban_inp" value="{/iban}" class="personal-data-form-input"/>
						</f:fields>
					</f:FormElement>
					<f:FormElement label="{i18n>language}" id="language_lbl">
						<f:fields>
							<RadioButtonGroup id="language_grp" columns="2">
								<buttons>
									<RadioButton text="{i18n>italian}" selected="{/italian}" groupName="gr_language"/>
									<RadioButton text="{i18n>german}" selected="{/german}" groupName="gr_language"/>
								</buttons>
							</RadioButtonGroup>
						</f:fields>
					</f:FormElement>
				</f:formElements>
			</f:FormContainer>
		</f:formContainers>
	</f:Form>
</core:FragmentDefinition>